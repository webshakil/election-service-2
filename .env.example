# Environment Configuration for Vottery Election Creation Service

# Server Configuration
NODE_ENV=development
PORT=3002
SERVICE_NAME=election-creation-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vottery_election_2
DB_USER=vottery_user
DB_PASSWORD=your_secure_password

# Cloudinary Configuration (Image/Video Upload)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# API Configuration
API_BASE_URL=http://localhost:3002
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your_32_character_encryption_key_here
HASH_SALT_ROUNDS=12

# File Upload Limits (in bytes)
MAX_FILE_SIZE=5242880
MAX_IMAGE_SIZE=5242880
MAX_VIDEO_SIZE=104857600
MAX_FILES_PER_REQUEST=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/election-service.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Payment Gateway Configuration (for future use)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PADDLE_VENDOR_ID=your_paddle_vendor_id
PADDLE_API_KEY=your_paddle_api_key

# External Services
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
ANALYTICS_API_KEY=your_analytics_api_key

# Development/Testing
DEBUG=election-service:*
MOCK_EXTERNAL_SERVICES=false
TEST_DB_NAME=vottery_election_2_test

# Production Only
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem
CLUSTER_MODE=false
WORKERS=auto